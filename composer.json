{
    "name": "spatie/laravel-varnish",
    "description": "Making Varnish and Laravel play nice together",
    "keywords": [
        "spatie",
        "laravel-varnish"
    ],
    "homepage": "https://github.com/spatie/laravel-varnish",
    "license": "MIT",
    "authors": [
        {
            "name": "Freek Van der Herten",
            "email": "freek@spatie.be",
            "homepage": "https://spatie.be",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.0",
        "illuminate/console": "^5.3",
        "illuminate/http": "^5.3"
    },
    "require-dev": {
        "phpunit/phpunit": "5.*",
        "orchestra/testbench": "^3.3.4"
    },
    "autoload": {
        "psr-4": {
            "Spatie\\Varnish\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Spatie\\Varnish\\Test\\": "tests"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "config": {
        "sort-packages": true
  }
}
